@using Microsoft.AspNetCore.Identity
@using BlogManagementApp.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    if (user != null)
    {
        <span class="text-white me-2"> Merhaba, <strong>@user.UserName</strong></span>

        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
            <button type="submit" class="btn btn-sm btn-outline-light">Çıkış Yap</button>
        </form>
    }
}
else
{
    <a class="btn btn-sm btn-outline-light me-2" asp-controller="Account" asp-action="Login">Giriş Yap</a>
    <a class="btn btn-sm btn-success" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
}
