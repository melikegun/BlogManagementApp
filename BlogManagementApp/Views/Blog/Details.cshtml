@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager
@model BlogManagementApp.Models.BlogPost

@{
    ViewData["Title"] = Model.Title;
}

<div class="card shadow-sm p-4">
    <h2 class="mb-3">@Model.Title</h2>
    <p class="text-muted">
        Yazar: <strong>@Model.User?.UserName</strong> |
        Kategori: <strong>@Model.Category?.Name</strong> |
        Yayın Tarihi: <strong>@Model.PublishedDate.ToString("dd MMMM yyyy")</strong>
    </p>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" class="img-fluid mb-3" style="max-height: 200px;" />
    }

    <hr />
    <p>@Model.Content</p>

    <hr />
    <h4>Yorumlar</h4>

    @if (Model.Comments != null && Model.Comments.Any())
    {
        @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
        {
            <div class="mb-3 border rounded p-2 bg-light">
                <p>@comment.Text</p>
                <small class="text-muted">
                    @comment.User?.UserName - @comment.CreatedAt.ToString("g")
                </small>

                @if (User.Identity.IsAuthenticated && comment.UserId == UserManager.GetUserId(User))
                {
                    <form asp-controller="Comment" asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@comment.Id" />
                        <button type="submit" class="btn btn-sm btn-danger ms-2">Sil</button>
                    </form>
                }
            </div>
        }

    }
    else
    {
        <p>Henüz yorum yok.</p>
    }

    @if (User.Identity.IsAuthenticated)
    {
        <form asp-action="AddComment" method="post">
            <input type="hidden" name="blogPostId" value="@Model.Id" />
            <div class="mb-3">
                <textarea name="commentText" class="form-control" rows="3" placeholder="Yorum yaz..." required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>
    }
    else
    {
        <p class="text-muted">Yorum yazmak için giriş yapmalısınız.</p>
    }

</div>
