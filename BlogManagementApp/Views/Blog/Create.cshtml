@model BlogManagementApp.Models.BlogPost

@{
    ViewData["Title"] = "Yeni Blog Yaz";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center"> Yeni Blog Yazısı Oluştur</h2>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">

                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Başlık</label>
                            <input asp-for="Title" class="form-control" placeholder="Blog başlığını yaz..." />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">İçerik</label>
                            <textarea asp-for="Content" class="form-control" rows="8" placeholder="Markdown destekli içerik girebilirsiniz..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Blog Görseli (isteğe bağlı)</label>
                            <input type="file" name="Image" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Kategori</label>
                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                                <option value="0">-- Kategori Seçin --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Yazıyı Yayınla</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
